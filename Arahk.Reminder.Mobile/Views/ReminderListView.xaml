<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Arahk.Reminder.Mobile.Models"
             x:DataType="local:ReminderListModel"
             x:Class="Arahk.Reminder.Mobile.Views.ReminderListView">
    <CollectionView ItemsSource="{Binding Items}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="local:ReminderListItemModel">
                <VerticalStackLayout Margin="0,10">
                    <Label FontSize="14" Text="{Binding Title}"></Label>
                    <Label FontSize="11" Margin="5,0,0,0" TextColor="{StaticResource Gray500}" Text="{Binding Subtitle}"></Label>
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentView>