<?xml version="1.0" encoding="utf-8"?>

<CollectionView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Arahk.Reminder.Mobile.Models"
             x:DataType="local:ReminderListItemModel"
             BindingContext="{Binding .}"
             x:Class="Arahk.Reminder.Mobile.Views.ReminderListView">
    <CollectionView.ItemTemplate>
        <DataTemplate>
            <VerticalStackLayout Margin="0,10">
                <Label FontSize="14" Text="{Binding Title}"></Label>
                <Label FontSize="11" Margin="5,0,0,0" TextColor="{StaticResource Gray500}" Text="{Binding Subtitle}"></Label>
            </VerticalStackLayout>
        </DataTemplate>
    </CollectionView.ItemTemplate>
</CollectionView>