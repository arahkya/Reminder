<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local-Views="clr-namespace:Arahk.Reminder.Mobile.Views"
             xmlns:local="clr-namespace:Arahk.Reminder.Mobile.Models"
             x:DataType="local:MainPageModel"
             x:Class="Arahk.Reminder.Mobile.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,20"
            Spacing="25">
            <Button
                x:Name="CounterBtn"
                Text="Add Entry" 
                SemanticProperties.Hint="Add Entry"
                Command="{Binding NavToReminderEntryViewCommand}"
                HorizontalOptions="Fill" />
            
            <local-Views:ReminderListView BindingContext="{Binding ReminderList}"></local-Views:ReminderListView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
